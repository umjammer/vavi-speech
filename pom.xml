      <version>1.1.12</version>
    </dependency>
    <dependency> <!-- JSAPI1 -->
      <groupId>com.github.umjammer</groupId>
      <artifactId>javax-speech</artifactId>
      <version>1.0.1</version>
    </dependency>

    <dependency>
